<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- found from: https://stackoverflow.com/questions/20653305/full-screen-theme-for-appcompat -->
    <style name="FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- fragment_breaking_news.xml -->
    <style name="Header">
        <item name="android:background">@color/yellow</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Content">
        <item name="android:background">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- fragment_remote_control.xml -->
    <style name="RemoteButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_shape_shadowed</item>
    </style>

    <style name="RemoteButtonBolded" parent="@style/RemoteButton">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
