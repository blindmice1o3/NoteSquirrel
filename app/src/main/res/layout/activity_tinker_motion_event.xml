<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sandbox.tinkermotionevent.TinkerMotionEventActivity">

    <ImageView
        android:id="@+id/imageView1MotionEvent"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/rsz_big_trouble_in_little_china"
        app:layout_constraintBottom_toTopOf="@id/imageView2MotionEvent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2MotionEvent"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/pc_ms_office_clippit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView1MotionEvent" />

</androidx.constraintlayout.widget.ConstraintLayout>