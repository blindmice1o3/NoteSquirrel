<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFF"
    tools:context=".sandbox.mealmaker3000cashier.fragments.fine.FineGrainControlsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_fine_grain_quadrant_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF00FF"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_fine_grain_quadrant_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recyclerview_fine_grain_quadrant_2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_fine_grain_quadrant_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_fine_grain_quadrant_4"
        app:layout_constraintLeft_toRightOf="@id/recyclerview_fine_grain_quadrant_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_fine_grain_quadrant_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#008800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recyclerview_fine_grain_quadrant_4"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_fine_grain_quadrant_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_fine_grain_quadrant_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#888888"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recyclerview_fine_grain_quadrant_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_fine_grain_quadrant_2" />

</androidx.constraintlayout.widget.ConstraintLayout>