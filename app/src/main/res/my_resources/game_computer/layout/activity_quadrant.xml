<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_quadrant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameboycolor.gamecartridges.derived.pocketcritters.computer.QuadrantActivity">

    <FrameLayout
        android:id="@+id/framelayout_quadrant_01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toTopOf="@id/framelayout_quadrant_02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.jackingaming.notesquirrel.gameboycolor.gamecartridges.derived.pocketcritters.computer.QuadrantSurfaceView
            android:id="@+id/surfaceview_quadrant_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_quadrant_02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFF00"
        app:layout_constraintBottom_toTopOf="@id/framelayout_quadrant_03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/framelayout_quadrant_01">
        <com.jackingaming.notesquirrel.gameboycolor.gamecartridges.derived.pocketcritters.computer.QuadrantSurfaceView
            android:id="@+id/surfaceview_quadrant_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_quadrant_03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0000FF"
        app:layout_constraintBottom_toTopOf="@id/framelayout_quadrant_04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/framelayout_quadrant_02">
        <com.jackingaming.notesquirrel.gameboycolor.gamecartridges.derived.pocketcritters.computer.QuadrantSurfaceView
            android:id="@+id/surfaceview_quadrant_03"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_quadrant_04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/framelayout_quadrant_03">
        <com.jackingaming.notesquirrel.gameboycolor.gamecartridges.derived.pocketcritters.computer.QuadrantSurfaceView
            android:id="@+id/surfaceview_quadrant_04"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>