<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_learnfragmentparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF00FF"
    tools:context=".sandbox.learnfragment.LearnFragmentParentActivity">

    <FrameLayout
        android:id="@+id/framelayout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0000FF"
        app:layout_constraintBottom_toTopOf="@id/framelayout_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FF00"
            android:text="TextView inside R.id.framelayout_top"
            android:textSize="24sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFF"
        app:layout_constraintBottom_toTopOf="@id/linearlayout_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/framelayout_top">

        <TextView
            android:id="@+id/textview_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFF00"
            android:text="TextView inside R.id.framelayout_bottom"
            android:textSize="16sp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearlayout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/framelayout_bottom">

        <Button
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="left"
            android:onClick="onLeftButtonClick"/>

        <Button
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="right"
            android:onClick="onRightButtonClick"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>