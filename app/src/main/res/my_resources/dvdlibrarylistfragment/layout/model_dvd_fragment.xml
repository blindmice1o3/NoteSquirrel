<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/framelayout_dvd_cover_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_dvd_cover_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Model Image"
            android:padding="5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imageview_favorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="5dp"
            android:src="@drawable/btn_star_off_normal_holo_light" />

    </FrameLayout>

    <TextView
        android:id="@+id/textview_dvd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/framelayout_dvd_cover_art"
        android:layout_alignLeft="@id/framelayout_dvd_cover_art"
        android:layout_alignRight="@id/framelayout_dvd_cover_art"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark" />

</RelativeLayout>
