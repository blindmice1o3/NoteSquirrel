<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_recycler_item_repository_for_saved_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/textview_index_column_recycler_item_repository_for_saved_list"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.90"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="1" />

    <TextView
        android:id="@+id/textview_index_column_recycler_item_repository_for_saved_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textview_index_row_recycler_item_repository_for_saved_list"
        app:layout_constraintTop_toBottomOf="@id/imageview_recycler_item_repository_for_saved_list"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.50" />

    <TextView
        android:id="@+id/textview_index_row_recycler_item_repository_for_saved_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintLeft_toRightOf="@id/textview_index_column_recycler_item_repository_for_saved_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_recycler_item_repository_for_saved_list"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>