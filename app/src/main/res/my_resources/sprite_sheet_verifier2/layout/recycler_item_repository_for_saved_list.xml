<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_recycler_item_repository_for_saved_list"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/textview_index_column_recycler_item_repository_for_saved_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_index_column_recycler_item_repository_for_saved_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageview_recycler_item_repository_for_saved_list"
        app:layout_constraintRight_toLeftOf="@id/textview_index_row_recycler_item_repository_for_saved_list"
        app:layout_constraintTop_toBottomOf="@id/imageview_recycler_item_repository_for_saved_list" />

    <TextView
        android:id="@+id/textview_index_row_recycler_item_repository_for_saved_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textview_index_column_recycler_item_repository_for_saved_list"
        app:layout_constraintRight_toRightOf="@id/imageview_recycler_item_repository_for_saved_list"
        app:layout_constraintTop_toBottomOf="@id/imageview_recycler_item_repository_for_saved_list" />

</androidx.constraintlayout.widget.ConstraintLayout>