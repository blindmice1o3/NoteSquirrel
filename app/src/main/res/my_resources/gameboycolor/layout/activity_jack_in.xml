<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF00"
    tools:context=".gameboycolor.JackInActivity">

    <FrameLayout
        android:id="@+id/framelayout_jackinactivity_viewport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <!--
    <com.jackingaming.notesquirrel.gameboycolor.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    -->

    <fragment
        android:id="@+id/directionalPadFragment"
        android:name="com.jackingaming.notesquirrel.gameboycolor.input.DirectionalPadFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <fragment
        android:id="@+id/buttonPadFragment"
        android:name="com.jackingaming.notesquirrel.gameboycolor.input.ButtonPadFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/launch_dvd_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/framelayout_jackinactivity_viewport"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="dvd list" />

    <Button
        android:id="@+id/select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/framelayout_jackinactivity_viewport"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/launch_dvd_activity_button"
        android:text="select" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/framelayout_jackinactivity_viewport"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/swap_game"
        android:text="start" />

    <Button
        android:id="@+id/swap_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/framelayout_jackinactivity_viewport"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="swap game" />

</RelativeLayout>